.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #202020;
  overflow: hidden;
} 

.result-container {
  background-color: #333;
}
.operate-container {
  position: absolute;
  width: 752rpx;
  height: 939rpx;
  bottom: 0;
}
.operate-container-line {
  border-bottom: 1px solid #333;
}

.item {
  display: inline-block;
  box-sizing: border-box;
  width: 188rpx;
  height: 187rpx;
  color: #262729;
  background-color: #d5d6d9;
  border-right: 1px solid #333;
  line-height: 187rpx;
  text-align: center;
  font-size: 20px
}
